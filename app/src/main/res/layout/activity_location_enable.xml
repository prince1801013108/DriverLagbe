<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context=".LocationEnable">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/location"
            android:layout_height="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="Enable Your Location"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Choose your location to find the\n request around you."
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/useMyLocationBtnId"
            android:text="Use My Location"
            android:textSize="17sp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/locationSkipBtnId"
            android:text="Skip for now"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="@font/raleway_regular"
            android:textColor="@color/drarkgray"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>